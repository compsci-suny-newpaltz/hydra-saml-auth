{
  "extensions.ignoreRecommendations": true,

  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoClean.run": "never",
  "latex-workshop.intellisense.enabled": false,

  "volar.autoCompleteRefs": false,
  "volar.codeLens.references": false,

  "intelephense.diagnostics.enable": false,
  "intelephense.completion.triggerParameterHints": false,

  "docker.showStartPage": false,
  "docker.promptOnStartup": false,

  "cmake.configureOnOpen": false,
  "cmake.showOptionsMovedNotification": false,

  "gradle.autoDetect": "off",

  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.smoothScrolling": false,
  "editor.hover.delay": 500,
  "editor.quickSuggestions": { "other": true, "comments": false, "strings": false },
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 1000,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/__pycache__/**": true
  },
  "workbench.colorTheme": "Default Dark+",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "telemetry.telemetryLevel": "off",
  "update.mode": "none",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "git.autofetch": false,
  "git.confirmSync": false,
  "git.detectSubmodules": false,
  "search.followSymlinks": false,
  "lccAssembly.enableErrorUnderlining": true,
  "lccAssembly.enableWarningUnderlining": true,
  "lccAssembly.enableInformationUnderlining": true,
  "files.associations": {
    "*.a": "lcc",
    "*.an": "lcc",
    "*.bin": "lcc",
    "*.c": "c",
    "*.cn": "c",
    "*.cpp": "cpp",
    "*.cpn": "cpp"
  }
}
