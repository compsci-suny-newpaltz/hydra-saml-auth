# Proxmox API Connection
proxmox_api_url          = "https://proxmox.example.com:8006/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform"
proxmox_api_token_secret = "your-api-token-secret"
proxmox_tls_insecure     = true
proxmox_target_node      = "pve"

# VM Template (must exist on Proxmox)
ubuntu_template = "ubuntu-22.04-template"

# Storage
storage_pool = "local-lvm"

# Networking
network_bridge  = "vmbr0"
network_prefix  = "10.0.0"
network_gateway = "10.0.0.1"
nameserver      = "8.8.8.8"

# SSH Keys (paste your public keys here)
ssh_public_keys = <<-EOT
ssh-rsa AAAAB3... user@example.com
ssh-ed25519 AAAAC3... admin@example.com
EOT

# GPU Passthrough (find IDs with: lspci -nn | grep -i nvidia)
chimera_gpu_ids = [
  "0000:01:00.0",
  "0000:02:00.0",
  "0000:03:00.0"
]

cerberus_gpu_ids = [
  "0000:04:00.0",
  "0000:05:00.0"
]
