# Monitoring Stack Environment Variables

# Domain for Traefik routing
DOMAIN=newpaltz.edu

# Grafana Admin (fallback if SSO fails)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# Grafana OAuth (Azure AD / SAML)
GRAFANA_OAUTH_CLIENT_ID=your-client-id
GRAFANA_OAUTH_CLIENT_SECRET=your-client-secret
SSO_AUTH_URL=https://login.microsoftonline.com/your-tenant/oauth2/v2.0/authorize
SSO_TOKEN_URL=https://login.microsoftonline.com/your-tenant/oauth2/v2.0/token
SSO_API_URL=https://graph.microsoft.com/oidc/userinfo

# SMTP for Alertmanager
SMTP_USERNAME=hydra-alerts@newpaltz.edu
SMTP_PASSWORD=your-smtp-password

# Remote node IPs (for Prometheus scraping)
CHIMERA_IP=10.0.0.11
CERBERUS_IP=10.0.0.12
