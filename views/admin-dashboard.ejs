            <div class="stat-row">
              <span class="stat-label">DISK</span>
              <span class="stat-value" id="hydra-disk">--</span>
            </div>
            <div class="stat-row">
              <span class="stat-label">CONTAINERS</span>
              <span class="stat-value" id="hydra-containers">--</span>
            </div>
          </div>

