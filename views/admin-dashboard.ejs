        <div class="table-container">
          <table id="containers-table">
            <thead>
              <tr>
                <th>CONTAINER</th>
                <th>OWNER</th>
                <th>MACHINE</th>
                <th>TIER</th>
                <th>COURSE</th>
                <th>STATUS</th>
                <th>EXPIRES</th>
                <th>ACTIONS</th>
              </tr>
            </thead>
            <tbody id="containers-tbody">
