                <span class="stat-label">VRAM</span>
                <span class="stat-value" id="chimera-gpu-0-mem">--</span>
              </div>
              <div class="stat-row">
                <span class="stat-label">TEMP</span>
                <span class="stat-value" id="chimera-gpu-0-temp">--</span>
              </div>
