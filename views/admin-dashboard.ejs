        <h2 class="section-title">USER MANAGEMENT</h2>
        <h3 style="color: var(--amber); margin: 1rem 0;">ADMIN WHITELIST</h3>
        <div id="admin-list">
          <% if (typeof admins !== 'undefined') { %>
            <% admins.forEach(admin => { %>
              <div style="padding: 0.5rem; border-bottom: 1px dotted var(--green-dim);">
                <%= admin %>
              </div>
            <% }); %>
          <% } %>
        </div>
        <h3 style="color: var(--cyan); margin: 1rem 0;">FACULTY WHITELIST</h3>
        <div id="faculty-list">
          <% if (typeof faculty !== 'undefined') { %>
            <% faculty.forEach(f => { %>
              <div style="padding: 0.5rem; border-bottom: 1px dotted var(--green-dim);">
                <%= f %>
              </div>
            <% }); %>
          <% } %>
        </div>
        <p style="color: var(--green-dim); margin-top: 1rem; font-size: 0.8rem;">
          NOTE: Whitelist is managed via config/whitelist.js or ADMIN_WHITELIST / FACULTY_WHITELIST env vars
        </p>
      </section>
    </main>
  </div>

  <!-- Modal for container details -->
  <div class="modal-overlay" id="container-modal">
    <div class="modal">
      <h3 class="modal-title" id="modal-container-name">CONTAINER DETAILS</h3>
      <div id="modal-content"></div>
      <div style="margin-top: 1rem; display: flex; gap: 1rem;">
        <button class="btn" onclick="accessContainer()">ACCESS CONTAINER</button>
        <button class="btn btn-warn" onclick="restartContainer()">RESTART</button>
        <button class="btn btn-danger" onclick="stopContainer()">STOP</button>
        <button class="btn" onclick="closeModal()">CLOSE</button>
      </div>
    </div>
  </div>

  <!-- Create Course Modal -->
  <div class="modal-overlay" id="course-modal">
    <div class="modal">
      <h3 class="modal-title">CREATE NEW COURSE</h3>
      <form id="create-course-form">
        <div style="margin-bottom: 1rem;">
          <label style="display: block; color: var(--green-dim); margin-bottom: 0.25rem;">COURSE CODE</label>
          <input type="text" name="code" class="search-box" style="width: 100%;" placeholder="CS101-F24" required>
        </div>
        <div style="margin-bottom: 1rem;">
          <label style="display: block; color: var(--green-dim); margin-bottom: 0.25rem;">COURSE NAME</label>
          <input type="text" name="name" class="search-box" style="width: 100%;" placeholder="Intro to Programming" required>
        </div>
        <div style="margin-bottom: 1rem;">
          <label style="display: block; color: var(--green-dim); margin-bottom: 0.25rem;">DEFAULT TIER</label>
          <select name="defaultTier" class="search-box" style="width: 100%;">
            <option value="micro">Micro (512MB)</option>
            <option value="tiny">Tiny (1GB)</option>
            <option value="small" selected>Small (2GB)</option>
            <option value="medium">Medium (4GB)</option>
          </select>
        </div>
        <div style="display: flex; gap: 1rem;">
          <button type="submit" class="btn">CREATE</button>
          <button type="button" class="btn" onclick="closeCourseModal()">CANCEL</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Clock
    function updateClock() {
      const now = new Date();
      document.getElementById('clock').textContent = now.toLocaleTimeString('en-US', { hour12: false });
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Panel navigation
    document.querySelectorAll('.sidebar-item[data-panel]').forEach(item => {
      item.addEventListener('click', () => {
        // Update sidebar
        document.querySelectorAll('.sidebar-item').forEach(i => i.classList.remove('active'));
        item.classList.add('active');

        // Update panels
        document.querySelectorAll('.panel').forEach(p => p.classList.remove('active'));
        document.getElementById('panel-' + item.dataset.panel).classList.add('active');
      });
    });

    // Fetch server stats
    async function fetchServerStats() {
      try {
        const res = await fetch('/api/machines/stats');
        const data = await res.json();

        if (data.machines) {
          let totalContainers = 0;

          data.machines.forEach(machine => {
            const prefix = machine.name.toLowerCase();
            const statusEl = document.getElementById(prefix + '-status');
            const cpuEl = document.getElementById(prefix + '-cpu');
            const cpuBar = document.getElementById(prefix + '-cpu-bar');
            const memEl = document.getElementById(prefix + '-mem');
            const memBar = document.getElementById(prefix + '-mem-bar');
            const containersEl = document.getElementById(prefix + '-containers');

            if (machine.online) {
              if (statusEl) statusEl.textContent = 'ONLINE';
              if (statusEl) statusEl.className = 'stat-value status-running';

              const cpuPercent = machine.cpu?.percent || 0;
              if (cpuEl) cpuEl.textContent = cpuPercent.toFixed(1) + '%';
              if (cpuBar) {
                cpuBar.style.width = cpuPercent + '%';
                cpuBar.className = 'progress-fill' + (cpuPercent > 80 ? ' critical' : cpuPercent > 60 ? ' warning' : '');
              }

              const memPercent = machine.memory?.percent || 0;
              if (memEl) memEl.textContent = memPercent.toFixed(1) + '%';
              if (memBar) {
                memBar.style.width = memPercent + '%';
                memBar.className = 'progress-fill' + (memPercent > 85 ? ' critical' : memPercent > 70 ? ' warning' : '');
              }

              if (containersEl) containersEl.textContent = machine.containers || 0;
              totalContainers += machine.containers || 0;

              // GPU stats
              if (machine.gpu && machine.gpu.length > 0) {
                machine.gpu.forEach((gpu, idx) => {
                  const gpuMemEl = document.getElementById(prefix + '-gpu-' + idx + '-mem');
                  const gpuTempEl = document.getElementById(prefix + '-gpu-' + idx + '-temp');
                  if (gpuMemEl) gpuMemEl.textContent = gpu.memoryUsed + ' / ' + gpu.memoryTotal;
                  if (gpuTempEl) {
                    gpuTempEl.textContent = gpu.temperature + '°C';
                    gpuTempEl.className = 'stat-value' + (gpu.temperature > 80 ? ' critical' : gpu.temperature > 70 ? ' warning' : '');
                  }
                });
              }
            } else {
              if (statusEl) {
                statusEl.textContent = 'OFFLINE';
                statusEl.className = 'stat-value status-stopped';
              }
              document.getElementById('server-' + prefix)?.classList.add('offline');
            }
          });

          document.getElementById('total-containers').textContent = totalContainers;
        }
      } catch (err) {
        console.error('Failed to fetch stats:', err);
      }
    }

    // Fetch containers
    async function fetchContainers() {
      try {
        const res = await fetch('/api/admin/containers');
        const data = await res.json();

        const tbody = document.getElementById('containers-tbody');
        tbody.innerHTML = '';

        let studentCount = 0;
        let expiringCount = 0;

        if (data.containers && data.containers.length > 0) {
          data.containers.forEach(c => {
            const now = new Date();
            const expires = new Date(c.expiresAt);
            const daysLeft = Math.ceil((expires - now) / (1000 * 60 * 60 * 24));

            let statusClass = 'status-running';
            if (c.state !== 'running') statusClass = 'status-stopped';
            else if (daysLeft <= 7) {
              statusClass = 'status-expiring';
              expiringCount++;
            }

            if (c.state === 'running') studentCount++;

            const row = document.createElement('tr');
            row.innerHTML = `
              <td>${c.name}</td>
              <td>${c.owner || '--'}</td>
              <td>${c.machine || 'hydra'}</td>
              <td>${c.tier || 'micro'}</td>
              <td>${c.course || '--'}</td>
              <td class="${statusClass}">${c.state.toUpperCase()}</td>
              <td>${daysLeft > 0 ? daysLeft + 'd' : 'EXPIRED'}</td>
              <td>
                <button class="btn" onclick="showContainerDetails('${c.name}')">DETAILS</button>
              </td>
            `;
            tbody.appendChild(row);
          });

          document.getElementById('active-students').textContent = studentCount;
          document.getElementById('expiring-soon').textContent = expiringCount;
        } else {
          tbody.innerHTML = '<tr><td colspan="8">NO CONTAINERS FOUND</td></tr>';
        }
      } catch (err) {
        console.error('Failed to fetch containers:', err);
        document.getElementById('containers-tbody').innerHTML = '<tr><td colspan="8" class="log-error">ERROR FETCHING CONTAINERS</td></tr>';
      }
    }

    // Fetch courses
    async function fetchCourses() {
      try {
        const res = await fetch('/api/courses');
        const data = await res.json();

        const list = document.getElementById('courses-list');

        if (data.courses && data.courses.length > 0) {
          list.innerHTML = '';
          document.getElementById('active-courses').textContent = data.courses.length;

          data.courses.forEach(course => {
            const card = document.createElement('div');
            card.className = 'course-card';
            card.innerHTML = `
              <div class="course-header">
                <span class="course-code">${course.code}</span>
                <span class="course-stats">${course.studentCount || 0} students</span>
              </div>
              <div style="color: var(--green);">${course.name}</div>
              <div style="color: var(--green-dim); font-size: 0.8rem; margin-top: 0.5rem;">
                Instructor: ${course.instructor} | Default Tier: ${course.defaultTier || 'small'}
              </div>
              <div style="margin-top: 0.5rem;">
                <button class="btn" onclick="viewCourseContainers('${course.code}')">VIEW CONTAINERS</button>
              </div>
            `;
            list.appendChild(card);
          });
        } else {
          list.innerHTML = '<p style="color: var(--green-dim);">NO COURSES FOUND. CREATE ONE TO GET STARTED.</p>';
          document.getElementById('active-courses').textContent = '0';
        }
      } catch (err) {
        console.error('Failed to fetch courses:', err);
      }
    }

    // Container search filter
    document.getElementById('container-search')?.addEventListener('input', (e) => {
      const search = e.target.value.toLowerCase();
      document.querySelectorAll('#containers-tbody tr').forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(search) ? '' : 'none';
      });
    });

    // Modal functions
    let currentContainer = null;

    function showContainerDetails(name) {
      currentContainer = name;
      document.getElementById('modal-container-name').textContent = 'CONTAINER: ' + name;
      document.getElementById('modal-content').innerHTML = '<p class="loading">LOADING DETAILS</p>';
      document.getElementById('container-modal').classList.add('active');

      // Fetch details
      fetch('/api/admin/containers/' + name)
        .then(res => res.json())
        .then(data => {
          document.getElementById('modal-content').innerHTML = `
            <div class="stat-row"><span class="stat-label">OWNER</span><span class="stat-value">${data.owner || '--'}</span></div>
            <div class="stat-row"><span class="stat-label">STATE</span><span class="stat-value">${data.state}</span></div>
            <div class="stat-row"><span class="stat-label">MACHINE</span><span class="stat-value">${data.machine || 'hydra'}</span></div>
            <div class="stat-row"><span class="stat-label">TIER</span><span class="stat-value">${data.tier}</span></div>
            <div class="stat-row"><span class="stat-label">TEMPLATE</span><span class="stat-value">${data.template || 'default'}</span></div>
            <div class="stat-row"><span class="stat-label">CREATED</span><span class="stat-value">${data.createdAt}</span></div>
            <div class="stat-row"><span class="stat-label">EXPIRES</span><span class="stat-value">${data.expiresAt}</span></div>
            <div class="stat-row"><span class="stat-label">LAST LOGIN</span><span class="stat-value">${data.lastLogin || 'NEVER'}</span></div>
          `;
        })
        .catch(err => {
          document.getElementById('modal-content').innerHTML = '<p class="log-error">ERROR LOADING DETAILS</p>';
        });
    }

    function closeModal() {
      document.getElementById('container-modal').classList.remove('active');
      currentContainer = null;
    }

    function accessContainer() {
      if (currentContainer) {
        window.open('/admin/container/' + currentContainer, '_blank');
      }
    }

    function restartContainer() {
      if (currentContainer && confirm('RESTART CONTAINER: ' + currentContainer + '?')) {
        fetch('/api/admin/containers/' + currentContainer + '/restart', { method: 'POST' })
          .then(() => {
            alert('RESTART INITIATED');
            fetchContainers();
          })
          .catch(err => alert('ERROR: ' + err.message));
      }
    }

    function stopContainer() {
      if (currentContainer && confirm('STOP CONTAINER: ' + currentContainer + '?')) {
        fetch('/api/admin/containers/' + currentContainer + '/stop', { method: 'POST' })
          .then(() => {
            alert('CONTAINER STOPPED');
            fetchContainers();
          })
          .catch(err => alert('ERROR: ' + err.message));
      }
    }

    // Course modal
    function showCreateCourseModal() {
      document.getElementById('course-modal').classList.add('active');
    }

    function closeCourseModal() {
      document.getElementById('course-modal').classList.remove('active');
    }

    document.getElementById('create-course-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);

      try {
        const res = await fetch('/api/courses', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          closeCourseModal();
          fetchCourses();
        } else {
          alert('ERROR CREATING COURSE');
        }
      } catch (err) {
        alert('ERROR: ' + err.message);
      }
    });

    function viewCourseContainers(code) {
      document.querySelector('[data-panel="containers"]').click();
      document.getElementById('container-search').value = code;
      document.getElementById('container-search').dispatchEvent(new Event('input'));
    }

    // Logs
    async function refreshLogs() {
      try {
        const filter = document.getElementById('log-filter').value;
        const res = await fetch('/api/admin/logs?filter=' + filter);
        const data = await res.json();

        const viewer = document.getElementById('log-viewer');
        viewer.innerHTML = '';

        if (data.logs && data.logs.length > 0) {
          data.logs.forEach(log => {
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.innerHTML = `<span class="log-timestamp">[${log.timestamp}]</span> <span class="log-${log.level}">${log.message}</span>`;
            viewer.appendChild(entry);
          });
        } else {
          viewer.innerHTML = '<div class="log-entry"><span class="log-info">NO LOGS AVAILABLE</span></div>';
        }
      } catch (err) {
        console.error('Failed to fetch logs:', err);
      }
    }

    // Initial load
    fetchServerStats();
    fetchContainers();
    fetchCourses();

    // Auto-refresh stats
    setInterval(fetchServerStats, 30000);
  </script>
</body>
</html>
