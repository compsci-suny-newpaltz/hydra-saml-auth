          <div class="server-card">
            <div class="stat-label">ACTIVE STUDENTS</div>
            <div class="stat-value" style="font-size: 2rem;" id="active-students">--</div>
          </div>
          <div class="server-card">
            <div class="stat-label">ACTIVE COURSES</div>
            <div class="stat-value" style="font-size: 2rem;" id="active-courses">--</div>
          </div>
          <div class="server-card">
            <div class="stat-label">EXPIRING SOON</div>
            <div class="stat-value warning" style="font-size: 2rem;" id="expiring-soon">--</div>
          </div>
        </div>
      </section>

