            <div class="stat-row">
              <span class="stat-label">STATUS</span>
              <span class="stat-value status-running" id="cerberus-status">ONLINE</span>
            </div>
            <div class="stat-row">
              <span class="stat-label">CPU</span>
              <span class="stat-value" id="cerberus-cpu">--</span>
            </div>
