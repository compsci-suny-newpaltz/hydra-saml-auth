FROM node:18-slim

# Install SQLite for debugging
RUN apt-get update && apt-get install -y --no-install-recommends \
    dumb-init \
    sqlite3 \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --omit=dev

# Copy only necessary files
COPY db.js ./db.js
COPY openwebui_middleman ./openwebui_middleman

# Set static IP for this container in compose
ENV DB_PATH=/app/data/webui.db \
    OPENWEBUI_API_PORT=7070

EXPOSE 7070

ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "openwebui_middleman/index.js"]
